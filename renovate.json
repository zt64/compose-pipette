{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":semanticCommitTypeAll(chore)",
        ":automergeMinor",
        ":automergeDigest",
        "schedule:automergeDaily"
    ],
    "packageRules": [
        {
            "enabled": false,
            "matchPackageNames": [
                "/^com.android.tools.build:gradle$/",
                "/^com.android:android-gradle$/",
                "/^com.android.application$/"
            ]
        }
    ]
}
